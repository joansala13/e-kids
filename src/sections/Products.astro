---
import KidLogo from "../icons/KidLogo.astro";
---

<section class="flex justify-between mt-10">
  <!-- Primera columna -->
  <div class="w-full max-w-60 h-auto">
    <span class="flex items-center px-3 py-1 border rounded-lg max-w-xs">
      <KidLogo />
      <p class="ml-3 text-lg font-bold">Special offers</p>
    </span>

    <div
      class="flex flex-col items-center justify-between mt-4 p-5 bg-white border border-gray-200 rounded-lg"
    >
      <span>
        <a href="#">
          <h5 class="text-xl font-semibold tracking-tight">Baby Onesies</h5>
        </a>
      </span>
      <img
        class="p-2 rounded-xl w-1/4 object-cover"
        src="/img/newborn.png"
        alt="Category image"
      />
      <button
        class="p-2.5 ms-2 text-sm font-bold text-white bg-secondary rounded-lg"
      >
        Shop now
      </button>
    </div>

    <div
      class="flex flex-col items-center justify-between mt-4 p-5 bg-secondary border0 rounded-lg"
    >
      <span>
        <a href="#">
          <h5 class="text-xl font-semibold tracking-tight">New arrivals</h5>
        </a>
      </span>
      <img
        class="p-2 rounded-xl w-1/4 object-cover"
        src="/img/newborn.png"
        alt="Category image"
      />
      <button
        class="p-2.5 ms-2 text-sm font-bold text-secondary bg-white rounded-lg"
      >
        Explore
      </button>
    </div>
  </div>

  <!-- Segunda columna -->
  <div class="w-full max-w-60 h-auto">
    <span class="flex items-center px-3 py-1 border rounded-lg">
      <KidLogo />
      <p class="ml-3 text-lg font-bold">Trending products</p>
    </span>

    <div
      class="flex flex-col max-w-sm mt-4 bg-white border border-gray-200 rounded-lg shadow"
    >
      <img class="w-1/4" src="/img/newborn.png" alt="" />

      <span class="flex justify-between p-5">
        <h5 class="mb-2 text-lg font-light">Soft baby blanked</h5>
        <svg
          class="icon icon-tabler icon-tabler-heart"
